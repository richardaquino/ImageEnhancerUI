MDScreen:
    name: "forgot"
    MDFloatLayout:
        md_bg_color: 0, 0, 0, 1

        Image:
			source: "logo.png"
			size_hint: .35, .35
			pos_hint: {"center_x": .18, "center_y": .9}

        MDLabel:
			text: "Please update your"
			font_size: "15sp"
			font_name: "Poppins-Medium.ttf"
			color: 1, 1, 1, 1
			pos_hint: {"center_x": .6, "center_y": .82}
		MDLabel:
			text: "Account"
			font_size: "28sp"
			font_name: "Poppins-SemiBold.ttf"
			color: 1, 1, 1, 1
			pos_hint: {"center_x": .6, "center_y": .78}

		MDLabel:
			text: "Username"
			font_size: "14sp"
			font_name: "Poppins-SemiBold.ttf"
			pos_hint: {"center_x": .61, "center_y": .67}
            color: 1, 1, 1, 1

		TextInput:
			size_hint_y: .75
			font_name: "Poppins-Regular.ttf"
			pos_hint: {"center_x": .60, "center_y": .29}
			hint_text: 'Username'
            helper_text:'Required'
            helper_text_mode:  'on_error'
			background_color: 0, 0, 0, 0
			cursor_color: 1, 1, 1, 1
			cursor_width: "2sp"
			foreground_color: 1, 1, 1, 1
			required: True
			font_size: "17sp"
			multiline: False

        MDFloatLayout:
			size_hint: .8, .002
			pos_hint: {"center_x": .5, "center_y": .6}
            md_bg_color: 120/255, 120/255, 120/255, 1

        MDLabel:
			text: "New Password"
			font_size: "14sp"
			font_name: "Poppins-SemiBold.ttf"
			pos_hint: {"center_x": .61, "center_y": .57}
            color: 1, 1, 1, 1

		TextInput:
			size_hint_y: .75
			font_name: "Poppins-Regular.ttf"
			pos_hint: {"center_x": .60, "center_y": .19}
			hint_text: 'New Password'
            helper_text:'Required'
            helper_text_mode:  'on_error'
			background_color: 0, 0, 0, 0
			cursor_color: 1, 1, 1, 1
			cursor_width: "2sp"
			font_size: "17sp"
			foreground_color: 1, 1, 1, 1
			required: True
			multiline: False
            password: True
        MDFloatLayout:
			size_hint: .8, .002
			pos_hint: {"center_x": .5, "center_y": .5}
            md_bg_color: 120/255, 120/255, 120/255, 1

		MDLabel:
			text: "Confirm New Password"
			font_size: "14sp"
			font_name: "Poppins-SemiBold.ttf"
			pos_hint: {"center_x": .61, "center_y": .48}
            color: 1, 1, 1, 1

		TextInput:
			size_hint_y: .75
			font_name: "Poppins-Regular.ttf"
			pos_hint: {"center_x": .60, "center_y": .10}
			hint_text: 'Confirm New Password'
            helper_text:'Required'
            helper_text_mode:  'on_error'
			background_color: 0, 0, 0, 0
			cursor_color: 1, 1, 1, 1
			cursor_width: "2sp"
			font_size: "17sp"
			foreground_color: 1, 1, 1, 1
			required: True
			multiline: False
			password: True

		MDFloatLayout:
			size_hint: .8, .002
			pos_hint: {"center_x": .5, "center_y": .4}
            md_bg_color: 120/255, 120/255, 120/255, 1

		MDTextButton:
			text: "UPDATE"
			background_color: 0, 0, 0, 0
			font_name: "Poppins-Medium.ttf"
			size_hint: .79, .08
			pos_hint: {"center_x": .5, "center_y": .33}
			halign: "center"

			canvas.before:
				Color:
					rgb: 226/255, 0, 48/255, 1
				RoundedRectangle:
					size: self.size
					pos: self.pos
					radius: [10]

		MDLabel:
		    text: "Have an existing account?"
		    color: 1, 1, 1, 1
            pos_hint: {"center_y": .27}
            font_size: "13sp"
            font_name: "Poppins-Regular.ttf"
            halign: "center"

        MDTextButton:
		    text: "Login"
		    color: "blue"
            pos_hint: {"center_y": .24, "center_x": .50}
            font_size: "13sp"
            font_name: "Poppins-Regular.ttf"
            halign: "center"
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "login"

		MDLabel:
		    text: "or"
		    color: 1, 1, 1, 1
            pos_hint: {"center_y": .20}
            font_size: "13sp"
            font_name: "Poppins-Regular.ttf"
            halign: "center"

        MDFloatLayout:
            md_bg_color: rgba(178, 178, 178, 255)
            size_hint: .3, .002
            pos_hint: {"center_x": .7, "center_y": .200}
        MDFloatLayout:
            md_bg_color: rgba(178, 178, 178, 255)
            size_hint: .3, .002
            pos_hint: {"center_x": .3, "center_y": .200}

        MDLabel:
		    text: "Connect with"
		    color: 1, 1, 1, 1
            pos_hint: {"center_y": .17}
            font_size: "13sp"
            font_name: "Poppins-Regular.ttf"
            halign: "center"

        MDGridLayout:
            cols: 3
            size_hint: .48, .07
            pos_hint:{"center_x": .5, "center_y": .1}

            Image:
                source: "google.png"
            Image:
                source: "facebook.png"
            Image:
                source: "applewhite.png"