MDScreen:
    name: "forgot"
    MDFloatLayout:
        md_bg_color: 0, 0, 0, 1

        Image:
			source: "logo.png"
			size_hint: .35, .35
			pos_hint: {"center_x": .18, "center_y": .9}

        MDLabel:
			text: "Please update your"
			font_size: "15sp"
			font_name: "Poppins-Medium.ttf"
			color: 1, 1, 1, 1
			pos_hint: {"center_x": .6, "center_y": .82}

		MDLabel:
			text: "Account"
			font_size: "28sp"
			font_name: "Poppins-SemiBold.ttf"
			color: 1, 1, 1, 1
			pos_hint: {"center_x": .6, "center_y": .78}

		MDTextField:
			font_name: "Poppins-Regular.ttf"
			size_hint_x: .80
			pos_hint: {"center_x": .50, "center_y": .69}
			hint_text: 'Email Address'
            helper_text:'Required'
            helper_text_mode:  'on_error'
            hint_text_color_normal: "white"
            text_color_normal: "white"
			background_color: 0, 0, 0, 0
			cursor_color: 1, 1, 1, 1
			cursor_width: "2sp"
			foreground_color: 1, 1, 1, 1
			required: True
			font_size: "17sp"
			multiline: False

		MDTextField:
			font_name: "Poppins-Regular.ttf"
			size_hint_x: .80
			pos_hint: {"center_x": .50, "center_y": .57}
			hint_text: 'New Password'
            helper_text:'Required'
            helper_text_mode:  'on_error'
            hint_text_color_normal: "white"
            text_color_normal: "white"
			background_color: 0, 0, 0, 0
			cursor_color: 1, 1, 1, 1
			cursor_width: "2sp"
			font_size: "17sp"
			foreground_color: 1, 1, 1, 1
			required: True
			multiline: False
            password: True

		MDTextField:
			font_name: "Poppins-Regular.ttf"
			size_hint_x: .80
			pos_hint: {"center_x": .50, "center_y": .45}
			hint_text: 'Confirm New Password'
            helper_text:'Required'
            helper_text_mode:  'on_error'
            hint_text_color_normal: "white"
            text_color_normal: "white"
			background_color: 0, 0, 0, 0
			cursor_color: 1, 1, 1, 1
			cursor_width: "2sp"
			font_size: "17sp"
			foreground_color: 1, 1, 1, 1
			required: True
			multiline: False
			password: True

		MDTextButton:
			text: "UPDATE"
			background_color: 0, 0, 0, 0
			font_name: "Poppins-Medium.ttf"
			size_hint: .79, .08
			pos_hint: {"center_x": .5, "center_y": .33}
			halign: "center"

			canvas.before:
				Color:
					rgb: 226/255, 0, 48/255, 1
				RoundedRectangle:
					size: self.size
					pos: self.pos
					radius: [10]

		MDLabel:
		    text: "Have an existing account?"
		    color: 1, 1, 1, 1
            pos_hint: {"center_y": .27}
            font_size: "13sp"
            font_name: "Poppins-Regular.ttf"
            halign: "center"

        MDTextButton:
		    text: "Login"
		    color: "blue"
            pos_hint: {"center_y": .24, "center_x": .50}
            font_size: "13sp"
            font_name: "Poppins-Regular.ttf"
            halign: "center"
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "login"

		MDLabel:
		    text: "or"
		    color: 1, 1, 1, 1
            pos_hint: {"center_y": .20}
            font_size: "13sp"
            font_name: "Poppins-Regular.ttf"
            halign: "center"

        MDFloatLayout:
            md_bg_color: rgba(178, 178, 178, 255)
            size_hint: .3, .002
            pos_hint: {"center_x": .7, "center_y": .200}
        MDFloatLayout:
            md_bg_color: rgba(178, 178, 178, 255)
            size_hint: .3, .002
            pos_hint: {"center_x": .3, "center_y": .200}

        MDLabel:
		    text: "Connect with"
		    color: 1, 1, 1, 1
            pos_hint: {"center_y": .17}
            font_size: "13sp"
            font_name: "Poppins-Regular.ttf"
            halign: "center"

        MDGridLayout:
            cols: 3
            size_hint: .48, .07
            pos_hint:{"center_x": .5, "center_y": .1}

            Image:
                source: "google.png"
            Image:
                source: "facebook.png"
            Image:
                source: "applewhite.png"